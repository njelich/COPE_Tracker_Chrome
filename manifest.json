{
  "manifest_version": 2,
  "name": "COPE Price Tracker",
  "description": "The extension for real-time monitoring of the COPE-USD rate from Coingecko API. Open-source",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "img/cope-19.png",
    "default_popup": "popup.html",
    "default_title": "COPEtracker"
  },
  "icons": { 
    "16": "img/cope-16.png",
    "19": "img/cope-19.png",
    "48": "img/cope-48.png",
    "128": "img/cope-128.png"
  },
  "permissions": [
  ]
}